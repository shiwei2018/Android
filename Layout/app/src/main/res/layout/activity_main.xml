<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lv77android.layout.MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/my_image"
        android:src="@drawable/bingo"
        android:onClick="fade2"/>

    <ImageView
        android:id="@+id/image2"
        android:alpha="0"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/my_image"
        android:src="@drawable/evil"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:id="@+id/fade_button"
        android:text="@string/button_text"
        android:layout_centerHorizontal="true"
        android:onClick="fade2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image2"
        android:id="@+id/come_button"
        android:text="@string/button_text_come"
        android:layout_centerHorizontal="true"
        android:onClick="show"
        android:visibility="invisible"
        />
</RelativeLayout>
